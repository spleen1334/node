            <li>
                <a class="dropdown-toggle" data-toggle="dropdown"  href="#"><%= user.profile.name %></a>
                <ul class="dropdown-menu">
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </li>
