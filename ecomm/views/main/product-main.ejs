<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
    <div class="container">
        <h1 class="text-center">Find your favorite product</h1>
        <p class="text-center">Use search field and enter input</p>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="input-group col-md-12">
                    <input id="search" name="search_term" type="text" value="" class="form-control input-lg" placeholder="Search for product..."/>
                    <span class="input-group-btn">
                        <button class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-search">Submit</i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row" id="searchResults">
        <% for(var i=0; i < products.length; i++) { %>
        <div class="col-md-4">
            <a href="<%= products[i]._id %>">
                <div class="thumbnail">
                    <img alt="" src="<%= products[i].image %>"/>
                    <div class="caption">
                        <h3><%= products[i].name %></h3>
                        <p><%= products[i].category.name %></p>
                        <p><%= products[i].price %></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>

        <ul class="pagination text-center">
            <li>
                <% for(var i=1; i<pages; i++ ) { %>
                    <% if(i === 1) { %>
                        <a href="/"><%= i %></a>
                    <% } else { %>
                        <a href="/page/<%= i %>"><%= i %></a>
                    <% } %>
                <% } %>
            </li>
        </ul>
    </div>
</div>
