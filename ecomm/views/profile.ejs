<% layout('layout') -%>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <img class="img-circle img-responsive img-center" alt="image" src="<%= user.profile.picture %>"/>
            <br/>
            <p>Name: <%= user.profile.name %></p>
            <p>Email: <%= user.profile.email %></p>
            <% if(user.address === "" || typeof user.address ==='undefined') { %>
                <p>Address: <span style="color: red; font-weight: bold;">You have no address</span></p>
            <% } else { %>
                <p>Address: <%= user.profile.address %></p>
            <% } %>

            <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
        </div>
    </div>
</div>

